<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="335dp"
    android:layout_height="wrap_content"
    android:background="@drawable/wygamesdk_login_bg"
    android:gravity="center"
    android:orientation="vertical">

    <com.jiaohe.wygamsdk.widget.APScrollView
        android:layout_width="fill_parent"
        android:layout_height="0.0dp"
        android:layout_weight="100.0"
        android:fillViewport="true">

        <LinearLayout
            android:id="@id/bsgamesdk_id_loginInputLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/wygamesdk_logo" />
            </LinearLayout>

            <RelativeLayout
                android:id="@id/bsgamesdk_id_usernameLayout"
                android:layout_width="240.0dp"
                android:layout_height="36.0dp"
                android:layout_marginTop="16dp">

                <EditText
                    android:id="@id/bsgamesdk_edit_username_login"
                    style="?attr/bsgamesdk_basic_editText_style"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:completionThreshold="1"
                    android:dropDownHeight="200.0dp"
                    android:hint="@string/wygamesdk_username_login_hit"
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName"
                    android:maxLength="32"
                    android:paddingRight="70.0dp" />

                <ImageButton
                    android:id="@id/bsgamesdk_login_usernameDel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="16.0dp"
                    android:layout_marginRight="8.0dp"
                    android:layout_toLeftOf="@id/bsgamesdk_edit_username_login"
                    android:background="@null"
                    android:contentDescription="@string/bsgamesdk_delbtn"
                    android:src="@drawable/bsgamesdk_pic_del"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@id/bsgamesdk_id_passwordLayout"
                android:layout_width="240.0dp"
                android:layout_height="36.0dp"
                android:layout_marginBottom="10.0dp">

                <EditText
                    android:id="@id/bsgamesdk_edit_password_login"
                    style="?attr/bsgamesdk_basic_editText_style"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/wygamesdk_password_login_hi"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:maxLength="32" />
            </RelativeLayout>

            <Button
                android:id="@id/bsgamesdk_buttonLogin"
                style="?attr/bsgamesdk_confirm_button_style"
                android:layout_width="240.0dp"
                android:layout_height="36.0dp"
                android:layout_marginBottom="10.0dp"
                android:text="@string/bsgamesdk_login_title" />

            <Button
                android:id="@id/bsgamesdk_buttonReg"
                style="?attr/bsgamesdk_reg_button_style"
                android:layout_width="240.0dp"
                android:layout_height="36.0dp"
                android:layout_marginBottom="10.0dp"
                android:text="@string/bsgamesdk_register_title" />

            <RelativeLayout
                android:layout_width="240.0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@id/bsgamesdk_textview_login_toursitLogin"
                    style="?attr/bsgamesdk_text_image_style"
                    android:layout_width="wrap_content"
                    android:layout_height="20.0dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20.0dp"
                    android:text="@string/bsgamesdk_login_touristLogin"
                    android:textSize="14.0sp" />

                <TextView
                    android:id="@id/bsgamesdk_textview_quickRegister"
                    style="?attr/bsgamesdk_text_image_style"
                    android:layout_width="wrap_content"
                    android:layout_height="20.0dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20.0dp"
                    android:text="@string/bsgamesdk_quickReg"
                    android:visibility="gone" />

                <TextView
                    android:id="@id/bsgamesdk_textview_login_forgetPwd"
                    style="?attr/bsgamesdk_text_image_style"
                    android:layout_width="wrap_content"
                    android:layout_height="20.0dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20.0dp"
                    android:text="@string/bsgamesdk_login_forgetPwd"
                    android:textSize="14.0sp" />
            </RelativeLayout>
        </LinearLayout>
    </com.jiaohe.wygamsdk.widget.APScrollView>
</LinearLayout>