<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/bsgamesdk_layoutLoading_web"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bsgamesdk_white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:contentDescription="@string/app_name"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@id/bsgamesdk_iv_web_loading"
            android:layout_width="36.0dip"
            android:layout_height="36.0dip"
            android:background="@drawable/bsgamesdk_animate_progress_captch" />

        <TextView
            android:id="@id/bsgamesdk_tv_loading_web"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6.669983dip"
            android:text="@string/bsgamesdk_loadingTipst" />
    </LinearLayout>
</RelativeLayout>